<body>
    <div class="container">
        <h1>ADD Balance</h1>
         <form action="">
             <label for="amount">Add Amount:</label><br>
             <input type="text" id="amountid" placeholder="Enter the amount"><br>
             <label for="pin">Pin:</label><br>
             <input type="password" id="pinid" placeholder="PIN"><br>
             <button id="addbtn">ADD</button>
         </form>
         
    </div>
